---
interface Props {
	title?: string;
	description?: string;
}

const {
	title = 'gsworkspace - Infinite Canvas AI Workspace',
	description = 'An infinite canvas workspace for combining text, images, videos, and AI-generated content. Built entirely by Claude Code.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="description" content={description} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	*,
	*::before,
	*::after {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}

	:root {
		--color-bg: #0a0a0f;
		--color-surface: #12121a;
		--color-surface-2: #1a1a26;
		--color-border: #2a2a3a;
		--color-text: #e4e4ed;
		--color-text-muted: #8888a0;
		--color-accent: #6366f1;
		--color-accent-light: #818cf8;
		--color-accent-glow: rgba(99, 102, 241, 0.15);
		--color-highlight: #c084fc;
		--font-sans: Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
		--font-mono: 'JetBrains Mono', 'Fira Code', 'Cascadia Code', Consolas, monospace;
	}

	html {
		font-family: var(--font-sans);
		background: var(--color-bg);
		color: var(--color-text);
		scroll-behavior: smooth;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}

	body {
		min-height: 100vh;
		line-height: 1.6;
	}

	a {
		color: var(--color-accent-light);
		text-decoration: none;
	}

	a:hover {
		color: var(--color-highlight);
	}

	img {
		max-width: 100%;
		height: auto;
	}
</style>
